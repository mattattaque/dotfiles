screen -t bash0

# clear screen on full-screen app close
altscreen on

#solution, have screen-256 on, have backset to light, 
term screen-256color

#Having just xterm doesn't work
term xterm-256color
bind ',' prev
bind '.' next

#Turn off startup splash screen
startup_message off 

hardstatus alwayslastline "%{rw}%H%{wk} | %?%-Lw%?%{wb}%n*f %t%?(%u)%?%{wk}%?%+Lw%?"



