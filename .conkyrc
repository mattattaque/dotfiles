# ~/.conkyrc
#

# avoid flicked
double_buffer yes

out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0


#borders
draw_borders no
border_inner_margine -3
border_outer_margine -1
border_margin 3

#position
alignment top_middle

own_window_color #283e52

#font
use_xft yes
xftfont sans:size=8

# Update int in seconds
update_interval 2.0

# Num of times conky will update before quitting
# Set to 0 to run forever
total_run_times 0

# Shortens units to single chars (kiB->k, GiB->G, etc) Default is off.
short_units yes


if_up_strictness address

use_spacer left

override_utf8_locale no

cpu_avg_samples 2


# Stuff after 'TEXT' will be formatted on screen

TEXT

#// comments out in JS.
#JSON for i3bar
[{"full_text" : "Home ${fs_free /home} Free", "color": "\#eeeeee"},
	{"full_text":"RAM ${memperc} ${membar}%", "color":
		${if_match ${memperc}<90}"\#eeeeee"${else}"\#ff0000"${endif} },
	{"full_text" : "B ${battery_percent BAT0}%", "color": "\#eeeeee"},
	//{"full_text": "CPU ${cpu} ${cpubar}%", "color": "\#eeeeee"},
	//{"full_text": "Kernel ${kernel}", "color": "\#eeeeee"},
],
